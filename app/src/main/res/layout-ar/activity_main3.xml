<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_blue_light"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اختـــــر"
        android:id="@+id/welcomeview"
        android:textColor="@android:color/white"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:clickable="true"
        android:autoLink="web"
        android:cursorVisible="true"
        android:id="@+id/Restaurants"
        android:text="المطاعم"
        android:linksClickable="true"
        android:onClick="goToRestaurants"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:background="@android:color/holo_blue_bright">
    </Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="الفنادق"
        android:autoLink="web"
        android:clickable="true"
        android:id="@+id/Hotels"
        android:onClick="goToHotels"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:background="@android:color/holo_blue_bright">
    </Button>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:clickable="true"
        android:autoLink="web"
        android:cursorVisible="true"
        android:id="@+id/Weather"
        android:text="حالة الطقس"
        android:linksClickable="true"
        android:onClick="goToWaether"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:background="@android:color/holo_blue_bright">
    </Button>



    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="اخر الاخبار"
        android:autoLink="web"
        android:clickable="true"
        android:id="@+id/Lastnews"
        android:onClick="goToLastnews"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:background="@android:color/holo_blue_bright">
    </Button>



    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="خدمات عامة"
        android:autoLink="web"
        android:clickable="true"
        android:id="@+id/Publicservices"
        android:onClick="goToPublicservices"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:background="@android:color/holo_blue_bright">
    </Button>


</LinearLayout>