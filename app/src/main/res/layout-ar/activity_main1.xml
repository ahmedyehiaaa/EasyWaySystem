<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmed.myproject.MainActivity1"
    android:background="@android:color/holo_blue_light"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="أنواع الخرائط"
        android:id="@+id/map1"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_bright"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:text="محطات البنزين"
        android:id="@+id/map2"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/map1"
        android:layout_marginTop="70dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:text="الخدمات"
        android:id="@+id/map3"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/map2"
        android:layout_marginTop="70dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:text="عرض مباشر"
        android:id="@+id/map4"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/map3"
        android:layout_marginTop="70dp"
        />

</RelativeLayout>

